@model MvcDirectory.Models.PersonModel.PersonUpdateViewModel
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h1 class="display-4 font-weight-light text-center">Update Person</h1>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Update", "Person", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.HiddenFor(x => x.Person.Id);
                        <div class="form-group">
                            @Html.LabelFor(x => x.Person.Name)
                            @Html.TextBoxFor(x => x.Person.Name, null, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.Person.PhoneNumber)
                            @Html.TextBoxFor(x => x.Person.PhoneNumber, null, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.Person.Email)
                            @Html.TextBoxFor(x => x.Person.Email, null, new { @class = "form-control" })
                        </div>
                        <div class="form-group text-center">
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Return</a>
                            <input type="submit" class="btn btn-primary" value="Save" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
