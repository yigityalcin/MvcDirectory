@model MvcDirectory.Models.PersonModel.PersonUpdateViewModel
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Add this style to the body element to make the footer sticky */
    body {
        margin: 0;
        padding: 0;
    }

    /* Add a custom class to the container to push the footer to the bottom */
    .min-vh-100 {
        min-height: 100vh;
    }

    /* Add these styles to make the footer sticky at the bottom */
    .d-flex {
        display: flex;
    }

    .flex-column {
        flex-direction: column;
    }

    .justify-content-between {
        justify-content: space-between;
    }

    /* Add any other styles you want to customize here */
    .form-group {
        margin-bottom: 15px;
    }

    .profile-picture {
        position: relative;
        width: 100px;
        height: 100px;
        overflow: hidden;
        /*border-radius: 50%;*/
    }

    .profile-picture-label {
        display: block;
        width: 100%;
        height: 100%;
        background-color: #ddd;
        cursor: pointer;
    }

    .profile-picture-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .profile-picture-overlay,
    .profile-picture-overlay1 {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background-color: rgba(0, 0, 0, 0.5);
        color: #fff;
        opacity: 0.1;
        transition: opacity 0.3s ease-in-out;
    }

        .profile-picture-overlay1 i,
        .profile-picture-overlay i {
            font-size: 24px;
        }

    .profile-picture-text {
        font-size: 12px;
        margin-top: 5px;
    }

    .profile-picture:hover .profile-picture-overlay,
    .profile-picture:hover .profile-picture-overlay1 {
        opacity: 1;
    }
</style>

<section class="container mt-5">
    <div class="d-flex flex-column justify-content-between min-vh-100">
        <div>
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h1 class="display-4 font-weight-light text-center">Update Person</h1>
                        </div>
                        <div class="card-body">
                            <div class="col-md-4 offset-md-2" style="top:10px; right:10px;">
                                <div class="profile-picture">
                                    <!-- Dosya seçme için gizli input etiketi -->
                                    <input type="file" id="fileInput" name="ProfilePhoto" style="display: none;" />

                                    <!-- Dosya seçme butonu için etiket -->
                                    <label class="profile-picture-label" for="fileInput"></label>
                                    @if (Model.Person.CroppedPhoto != null)
                                    {
                                        <img class="profile-picture-image" src="(Model.Person.CroppedPhoto)" alt="Profile Picture" />
                                        <div class="profile-picture-overlay1">
                                            <i class="fas fa-camera"></i>
                                            <div class="profile-picture-text">Change photo</div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="profile-picture-overlay">
                                            <i class="fas fa-camera"></i>
                                            <div class="profile-picture-text">No photo</div>
                                        </div>
                                    }
                                </div>
                            </div>
                            @using (Html.BeginForm("Update", "Person", FormMethod.Post, new { @class = "form-horizontal" }))
                            {
                                @Html.HiddenFor(x => x.Person.Id);
                                <div class="form-group">
                                    @Html.LabelFor(x => x.Person.Name)
                                    @Html.TextBoxFor(x => x.Person.Name, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(x => x.Person.PhoneNumber)
                                    @Html.TextBoxFor(x => x.Person.PhoneNumber, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(x => x.Person.Email)
                                    @Html.TextBoxFor(x => x.Person.Email, new { @class = "form-control" })
                                </div>
                                <div class="form-group text-center">
                                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Return</a>
                                    <input type="submit" class="btn btn-primary" value="Save" />
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div>
            <!-- Empty div for pushing the footer to the bottom -->
        </div>
    </div>
</section>

@section Scripts {

}
