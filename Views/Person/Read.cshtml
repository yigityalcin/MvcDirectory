@model MvcDirectory.Models.Entities.Person
@{
    ViewData["Title"] = "Read";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Add this style to the body element to make the footer sticky */
    body {
        margin: 0;
        padding: 0;
    }

    /* Add a custom class to the container to push the footer to the bottom */
    .min-vh-100 {
        min-height: 100vh;
    }

    /* Add these styles to make the footer sticky at the bottom */
    .d-flex {
        display: flex;
    }

    .flex-column {
        flex-direction: column;
    }

    .justify-content-between {
        justify-content: space-between;
    }

    /* Add any other styles you want to customize here */
    .form-group {
        margin-bottom: 15px;
    }
</style>

<section class="container mt-5">
    <div class="d-flex flex-column justify-content-between min-vh-100">
        <div>
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h1 class="display-4 font-weight-light text-center">Read Record</h1>
                        </div>
                        <div class="card-body">
                            <form class="form-horizontal" method="post" enctype="multipart/form-data">
                                <div class="form-group text-center">
                                    <button type="submit" class="btn btn-success">Get the info</button>
                                </div>
                            </form>

                            <form class="form-horizontal" method="post" action="/Person/ReadSave">
                                <div class="form-group">
                                    <label for="name">Name</label>
                                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                                </div>

                                <div class="form-group">
                                    <label for="phoneNumber">Phone Number</label>
                                    @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control", pattern = "\\d{10,11}", title = "Enter a valid phone number (10 or 11 digits)" })
                                    <div class="invalid-feedback">
                                        Please enter a valid phone number (10 or 11 digits).
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="email">Email</label>
                                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", type = "email" })
                                </div>

                                <div class="form-group text-center">
                                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Return</a>
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div>
            <!-- Empty div for pushing the footer to the bottom -->
        </div>
    </div>
</section>

@section Scripts {
    <!-- The form validation script can remain the same as before -->
}
