@model MvcDirectory.Models.UserModel.UserLoginViewModel;

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .login1 {
        margin-top: 130px;
        margin-bottom: 300px;
    }
</style>
<body class="loginpage align-items-md-center">
    <div class="form-signin w-50 m-auto">
        <form class="login1" action="#" method="post">

            <h1 class="h3 mb-3 fw-normal text-white">Please sign in</h1>

            @*<div class="form-floating">
                    <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                    <label for="floatingInput">Email address</label>
                </div>*@
            <div class="form-floating mb-2">
                <input type="text" class="form-control" name="username" id="floatingInput" placeholder="username">
                <label for="floatingInput">Username</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" name="password" id="floatingPassword" placeholder="password">
                <label for="floatingPassword">Password</label>
            </div>

            <div class="form-check text-start my-3 text-white">
                <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    Remember me
                </label>
            </div>
            <button class="btn btn-primary w-100 py-2 border-black" style="background-color:grey; color:white;" type="submit">Sign in</button>
        </form>
    </div>
</body>